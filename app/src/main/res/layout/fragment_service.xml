<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_flow"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/user_top_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_88"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/dimen_30"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/setting" />

            <RelativeLayout
                android:id="@+id/rl_mess"
                android:paddingRight="@dimen/dimen_30"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/img_mess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/main_message" />

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/img_hint"
                        android:layout_width="@dimen/dimen_10"
                        android:layout_height="@dimen/dimen_10"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/red_ovel" />

                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>
        
        <LinearLayout
            android:paddingBottom="@dimen/dimen_30"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_vip_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_98"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="@dimen/text_60" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_26"
                android:text="累积会员"
                android:textColor="@color/white"
                android:textSize="@dimen/text_30" />

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_18"
                android:background="@drawable/bg_tabs"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:paddingTop="@dimen/dimen_8"
                android:paddingBottom="@dimen/dimen_8"
                android:paddingRight="@dimen/dimen_8"
                android:paddingLeft="@dimen/dimen_8"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingRight="@dimen/dimen_8"
                    android:paddingLeft="@dimen/dimen_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_40"
                    android:paddingTop="@dimen/dimen_40">

                    <LinearLayout
                        android:id="@+id/ll_course_record"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_2"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:textColor="@color/color_1659e7"
                            android:text="15"
                            android:textSize="@dimen/dimen_40"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                             />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_20"
                            android:text="粉丝数"
                            android:textColor="@color/color_313546"
                            android:textSize="@dimen/text_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_job_commit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_2"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:textColor="@color/color_1659e7"
                            android:text="60"
                            android:textSize="@dimen/dimen_40"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_20"
                            android:text="服务人数"
                            android:textColor="@color/color_313546"
                            android:textSize="@dimen/text_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_course_apply"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_2"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:textColor="@color/color_1659e7"
                            android:text="121"
                            android:textSize="@dimen/dimen_40"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_20"
                            android:text="文章数"
                            android:textColor="@color/color_313546"
                            android:textSize="@dimen/text_24" />

                    </LinearLayout>
                    
                </LinearLayout>
            </LinearLayout>
            
        </LinearLayout>

       


    </RelativeLayout>
    <View
        android:background="@color/line_gray"
        android:layout_marginBottom="@dimen/dimen_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"/>
    
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <include layout="@layout/line_view"/>
        <LinearLayout
            style="@style/user_info_ll"
            >
            <TextView
                android:text="图文问诊"
                style="@style/user_info_left_tv_style" />
            <TextView
                android:text="已开通"
                android:layout_marginRight="@dimen/dimen_30"
                android:textSize="@dimen/text_28"
                android:textColor="@color/color_3d3d3d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/arrow_left_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            style="@style/user_line"
            />

        <LinearLayout style="@style/user_info_ll">

            <TextView
                style="@style/user_info_left_tv_style"
                android:text="电话问诊" />
            <TextView
                android:text="已开通"
                android:layout_marginRight="@dimen/dimen_30"
                android:textSize="@dimen/text_28"
                android:textColor="@color/color_3d3d3d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_left_grey" />

        </LinearLayout>

        <View
            style="@style/user_line"
            />
        <LinearLayout
            style="@style/user_info_ll"
            >
            <TextView
                android:text="视频问诊"
                style="@style/user_info_left_tv_style" />

            <TextView
                android:text="已开通"
                android:layout_marginRight="@dimen/dimen_30"
                android:textSize="@dimen/text_28"
                android:textColor="@color/color_989898"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/arrow_left_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <include layout="@layout/line_view"/>

    </LinearLayout>



</LinearLayout>