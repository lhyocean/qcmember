<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <include layout="@layout/head_title"/>
    <LinearLayout
        
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_60"
        android:paddingRight="@dimen/dimen_60"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        
        <RelativeLayout
            android:layout_marginTop="@dimen/dimen_40"
            android:layout_marginBottom="@dimen/dimen_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textCursorDrawable="@drawable/edit_selection_color"
                android:id="@+id/input_phone"
                android:maxLength="11"
                android:singleLine="true"
                android:maxLines="1"
                android:inputType="number"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:textColor="@color/color_293535"
                android:textColorHint="@color/color_c1c4c5"
                android:background="@color/white"
                android:paddingTop="@dimen/dimen_10"
                android:paddingBottom="@dimen/dimen_10"
                android:textSize="@dimen/text_28"
                android:layout_width="@dimen/dimen_500"
                android:layout_height="@dimen/dimen_60" />
            <TextView
                android:textSize="@dimen/text_28"
                android:textColor="@color/color_989898"
                android:id="@+id/tv_get_code"
                android:gravity="center"
                android:text="获取验证码"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_60" />
         

        </RelativeLayout>



        <include layout="@layout/line_view"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/dimen_40"
            android:layout_marginBottom="@dimen/dimen_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textCursorDrawable="@drawable/edit_selection_color"
                android:maxLength="10"
                android:layout_centerVertical="true"
                android:id="@+id/input_code"
                android:singleLine="true"
                android:maxLines="1"
                android:inputType="number"
                android:text=""
                android:gravity="center_vertical"
                android:hint="请输入短信验证码"
                android:textColor="@color/color_293535"
                android:textColorHint="@color/color_c1c4c5"
                android:background="@color/white"
                android:paddingTop="@dimen/dimen_10"
                android:paddingBottom="@dimen/dimen_10"
                android:textSize="@dimen/text_28"
                android:layout_width="@dimen/dimen_500"
                android:layout_height="@dimen/dimen_60" />
            

        </RelativeLayout>

        <include layout="@layout/line_view"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/dimen_40"
            android:layout_marginBottom="@dimen/dimen_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textCursorDrawable="@drawable/edit_selection_color"
                android:maxLength="20"
                android:layout_centerVertical="true"
                android:id="@+id/input_pass"
                android:singleLine="true"
                android:maxLines="1"
                android:inputType="textPassword"
                android:text=""
                android:gravity="center_vertical"
                android:hint="请输入新密码（最少8位，数字+字母）"
                android:textColor="@color/color_293535"
                android:textColorHint="@color/color_c1c4c5"
                android:background="@color/white"
                android:paddingTop="@dimen/dimen_10"
                android:paddingBottom="@dimen/dimen_10"
                android:textSize="@dimen/text_28"
                android:layout_width="@dimen/dimen_500"
                android:layout_height="@dimen/dimen_60" />


        </RelativeLayout>

        <include layout="@layout/line_view"/>
        
        
        <TextView
            android:id="@+id/tv_login"
            android:layout_marginTop="@dimen/dimen_50"
            android:gravity="center"
            android:text="提交"
            android:textSize="@dimen/text_30"
            android:textColor="@color/white"
            android:background="@drawable/login_bg_error"
            android:paddingBottom="@dimen/dimen_30"
            android:paddingTop="@dimen/dimen_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

      



    </LinearLayout>
    
    

</LinearLayout>