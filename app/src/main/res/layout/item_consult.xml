<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <RelativeLayout
       
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.beijing.qchealth.qchealth_vip.view.CircleImageView
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_marginRight="@dimen/dimen_12"
            android:id="@+id/img_head"
            android:src="@drawable/ic_launcher"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_marginBottom="@dimen/dimen_30"
            android:layout_width="@dimen/dimen_72"
            android:layout_height="@dimen/dimen_72"/>
        
        <LinearLayout
            android:paddingRight="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dimen_26"
            android:layout_toRightOf="@+id/img_head"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:lines="1"
                android:id="@+id/tv_name"
                android:text="welcome"
                android:textColor="@color/text_deep_black"
                android:textSize="@dimen/text_28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tv_content"
                android:layout_marginTop="@dimen/dimen_6"
                android:text="welcome"
                android:textColor="@color/text_light_black"
                android:textSize="@dimen/text_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_marginRight="@dimen/dimen_30"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_30"
            android:text="2017.12.12"
            android:textColor="@color/text_light_black"
            android:textSize="@dimen/text_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <View
            android:layout_marginTop="@dimen/dimen_1"
            android:layout_below="@+id/img_head"
            android:background="@color/line_gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"/>
        
        
    </RelativeLayout>
    
    

</RelativeLayout>