<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/bg_flow"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/head_title"/>

        <View
            android:layout_width="match_parent"
            android:background="@color/line_gray"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_height="@dimen/dimen_1"/>
        <LinearLayout
            android:paddingLeft="@dimen/dimen_10"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/line_view"/>
            <LinearLayout
                android:id="@+id/ll_notify"
                style="@style/user_info_ll"
                >
                <TextView
                    android:text="消息通知"
                    style="@style/user_info_left_tv_style"

                    />

                <ImageView
                    android:src="@drawable/arrow_left_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <View
                style="@style/user_line"
                />

            <LinearLayout style="@style/user_info_ll">

                <TextView
                    style="@style/user_info_left_tv_style"
                    android:text="清除缓存" />

                <TextView
                    android:id="@+id/tv_count"
                    android:textSize="@dimen/text_30"
                    android:textColor="@color/color_A2A4A3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_left_grey" />

            </LinearLayout>

        </LinearLayout>
        <include layout="@layout/line_view"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/line_gray"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_height="@dimen/dimen_1"/>
        <LinearLayout
            android:paddingLeft="@dimen/dimen_10"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/line_view"/>
            <LinearLayout
                style="@style/user_info_ll"
                >
                <TextView
                    android:text="服务条款"
                    style="@style/user_info_left_tv_style" />

                <ImageView
                    android:src="@drawable/arrow_left_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <View
                style="@style/user_line"
                />

            <LinearLayout style="@style/user_info_ll">

                <TextView
                    style="@style/user_info_left_tv_style"
                    android:text="关于我们" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_left_grey" />

            </LinearLayout>

        </LinearLayout>
        <include layout="@layout/line_view"/>
        
    </LinearLayout>
    
     <TextView
         android:id="@+id/tv_login_out"
         android:textColor="@color/white"
         android:background="@drawable/bg_login_out"
         android:layout_marginLeft="@dimen/dimen_30"
         android:layout_marginRight="@dimen/dimen_30"
         android:text="退出登录"
         android:layout_alignParentBottom="true"
         android:gravity="center"
         android:paddingTop="@dimen/dimen_30"
         android:paddingBottom="@dimen/dimen_30"
         android:layout_marginBottom="@dimen/dimen_50"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" />

</RelativeLayout>