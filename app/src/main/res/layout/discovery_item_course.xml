<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <com.beijing.qchealth.qchealth_vip.view.RoundedImageView
            android:scaleType="fitXY"
            android:src="@drawable/discovery_course"
            android:id="@+id/img"
            app:corner_radius="@dimen/dimen_10"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/dimen_340"
            android:layout_height="@dimen/dimen_228" />
        
        <ImageView
            android:src="@drawable/bg_top"
            android:layout_alignRight="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dimen_10"
            android:layout_alignRight="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_38">

            <ImageView
                android:src="@drawable/scan_count_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:text="200"
                android:textColor="@color/white"
                android:textSize="@dimen/text_24" />
            
        </LinearLayout>

        <ImageView
            android:src="@drawable/bg_bottom"
            android:layout_alignBottom="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_10"
            android:layout_alignBottom="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_38">
            
            <TextView
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:00"
                android:textColor="@color/white"
                android:textSize="@dimen/text_24" />

        </LinearLayout>

        <TextView
            android:layout_below="@+id/img"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_marginBottom="@dimen/dimen_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教你几招快速解决问题"
            android:textColor="@color/color_293535"
            android:textSize="@dimen/text_24" />
 
        
        
    </RelativeLayout>

</LinearLayout>