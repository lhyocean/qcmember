<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_88"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/dimen_30"
        >

        <ImageView
            android:src="@drawable/discovery_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />

        <RelativeLayout
            android:id="@+id/rl_mess"
            android:paddingRight="@dimen/dimen_30"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/img_mess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_message" />

                <TextView
                    android:visibility="visible"
                    android:id="@+id/img_hint"
                    android:layout_width="@dimen/dimen_10"
                    android:layout_height="@dimen/dimen_10"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/red_ovel" />

            </RelativeLayout>

        </RelativeLayout>




    </RelativeLayout>
    <include layout="@layout/tab_viewpager_container"/>
</LinearLayout>