<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout


        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="@dimen/dimen_600"
        android:layout_height="wrap_content">

          <LinearLayout
              android:layout_marginTop="@dimen/dimen_10"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <ImageView
                  android:src="@mipmap/ic_launcher"
                  android:layout_marginLeft="@dimen/dimen_50"
                  android:layout_width="@dimen/dimen_70"
                  android:layout_height="@dimen/dimen_70"/>
              <TextView
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="@dimen/dimen_50"
                  android:padding="@dimen/dimen_10"
                  android:text="上传图片进度： "
                  android:textColor="@color/text_deep_black"
                  android:id="@+id/tv_progress"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

          </LinearLayout>

           <View
               android:layout_marginTop="@dimen/dimen_10"
               android:background="@color/line_gray"
               android:layout_gravity="center_horizontal"
               android:layout_width="@dimen/dimen_500"
               android:layout_height="@dimen/dimen_1"/>

           <ProgressBar
               android:layout_marginTop="@dimen/dimen_10"
               android:layout_marginBottom="@dimen/dimen_10"
               android:layout_gravity="center_horizontal"
               android:id="@+id/progress_update"
               android:layout_width="@dimen/dimen_500"
               android:layout_height="@dimen/dimen_40"
               android:minHeight="@dimen/dimen_40"
               android:maxHeight="@dimen/dimen_40"
               style="?android:attr/progressBarStyleHorizontal"
               android:max="100"
               android:progress="10"
               android:secondaryProgress="0" />
    </LinearLayout>
</LinearLayout>